<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="module.project.dao.PManagerMapper">
    <!--<cache flushInterval="300000" size="512" type="org.mybatis.caches.memcached.MemcachedCache"/>-->
    <resultMap id="GroupMap" type="module.group.model.Group">

        <id column="group_id" property="groupId"/>

        <result column="creator_name" property="creatorName"/>

        <result column="name" property="groupName"/>

        <result column="info" property="info"/>

        <result column="create_time" property="create_time"/>

        <result column="update_time" property="update_time"/>

    </resultMap>

    <insert id="insertGroup" useGeneratedKeys="true" keyProperty="group_id" parameterType="Group">
        insert into "group" (creator_name,name,info,group_id,create_time,update_time)
        values (#{creatorName},#{name},#{info},#{groupId},#{create_time},#{update_time})
        <selectKey keyProperty="group_id" resultType="int">
            select LAST_INSERT_ID()
        </selectKey>

    </insert>

    <update id="updateGroup" parameterType="int">
        update "group" set name=#{name},info=#{info},update_time=#{update_time} where group_id=#{groupId}
    </update>

    <delete id="deleteGroup" parameterType="int">
        delete from "group" where group_id=#{groupId}
    </delete>

    <select id="selectById" parameterType="int" resultMap="groupMap">
        select * from "group" left join group_member on "group".group_id=group_member.group_id where group_id=#{groupId}
    </select>

    <!--<insert id="insertMember" >-->
        <!--insert into project (creator_name,name,info,group_id) values (#{creatorName},#{name},#{info},#{groupId})-->
    <!--</insert>-->

    <!--这里可以获得刚插入表格的id，为后面manager的插入提供了projectId字段-->
    <select id="selectLastId" resultType="int">
        select LAST_INSERT_ID()
    </select>



</mapper>